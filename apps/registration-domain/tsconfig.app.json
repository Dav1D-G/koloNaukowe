{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    "lib" : ["ES2021"],
    "outDir": "../../dist/out-tsc",
    "module": "CommonJS",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "target": "ES2022"
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
}
